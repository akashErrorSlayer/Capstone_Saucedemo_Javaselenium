<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="SauceDemo Suite" parallel="false">
  <listeners>
    <listener class-name="com.example.framework.TestListener"/>
  </listeners>
  <test name="Regression">
    <classes>
      <class name="com.example.tests.LoginTests"/>
      <class name="com.example.tests.CartTests"/>
      <class name="com.example.tests.CheckoutTests"/>
    </classes>
  </test>
  <test name="Cucumber BDD Tests"  parallel="false">
        <classes>
            <!-- include your cucumber runner -->
            <class name="com.example.runners.TestRunner"/>
        </classes>
    </test>
</suite>
